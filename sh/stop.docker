#!/usr/bin/bash

stop.docker () {
    local dname; dname="$1"

    if container.running "$dname"
    then
        docker stop "$dname"
    fi

    if container.exists  "$dname"  
    then
        docker rm "$dname"
    fi

}

container.running () {
    docker top "$1" > /dev/null 2>&1 && return 0
    return 1
}

container.exists () {
    docker container inspect "$1" > /dev/null 2>&1 && return 0
    return 1
}