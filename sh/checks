#!/bin/bash
import errcho

check.i_am_root () {
    if [[ $EUID -ne 0 ]]; then
        errxit "$0 must be run as root"
    fi

    if ! which groupadd > /dev/null; then
        errxit "root environment not properly initialised - can't find groupadd"
    fi
}

# server info
# cat /etc/os-release
# cat /etc/lsb-release
# uname -a
check.is_debian () {
    [[ $(check.os) == debian ]]
}

check.is_ubuntu () {
    [[ $(check.os) == ubuntu ]]
}

check.os () {
    source /etc/os-release
    echo "$ID"
}
